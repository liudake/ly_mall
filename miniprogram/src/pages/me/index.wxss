.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  width: 100%;
  height: 240rpx;
  background: linear-gradient(to bottom, #ef5350,  #ff5252);
}
.circle {
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.tab-wr {
  display: flex;
  justify-content: space-around;
  padding: 32rpx;
  font-size: 14px;
  color: #fff;
  background: #ff867f;
}